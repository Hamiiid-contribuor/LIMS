{% extends '::base.html.twig' %}
{% block content %}
    <style>
        th{
            font-size: 13px !important;
        }
        td{
            font-size: 11.55px !important;
        }
        .im:hover, .im:active{
            transform: scale(1.2);
            box-shadow: 0 0 40px #CDBE9F inset, 0 0 20px #BEAE8C inset, 0 0 15px #b6a684;
            transition: all 0.3s ease-in;
        }

    </style>

    <div>
        <br/>
    </div>
    <div class="row">
        <!-- pannel d'affchage d'analyses --> 
        <div id="pannelList" class="col-md-10 col-md-offset-1 ">
            <div style="height: 514px ; " class="panel panel-default">

                <div class="panel-heading" style="font-family: 'Times New Roman' ; font-size: 15px ;">
                    <span>Liste des  demandes D'analyses:</span>
                </div>
                <div class="panel-body " >

                    <table id="myTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Client(demandeur)</th>
                                <th>Date de Reception  </th>
                                <th>Priorit√©</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for dmd in demandes %}
                                <tr class="gradeX">
                                    <td>{{loop.index}}</td>
                                    <td class="center">{{dmd.client.nom}} &nbsp; &nbsp;{{dmd.client.prenom}} </td>
                                    <td class="center">{{dmd.date}}</td>
                                    <td class="center">Lorem ipsum </td>
                                    <td class="center">{{dmd.commentaire}} </td> 
                                    <td>
                                        <a class="btn btn-primary" href="{{path('traitementDmD',{'id':dmd.id})}}">
                                            <i class="fa fa-angle-double-right"></i> &nbsp;&nbsp;Traitement
                                        </a>
                                    </td>    
                                </tr>
                            {% endfor %}
                        </tbody>

                    </table>
                </div>
            </div><!-- /.pannel-->
        </div><!-- /.col-->
    </div>
{%endblock%}

