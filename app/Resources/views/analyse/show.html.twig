{% extends 'base.html.twig' %}

{% block body %}
    <h1>Analyse</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ analyse.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ analyse.code }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ analyse.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ analyse.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ analyse.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('analyse_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('analyse_edit', { 'id': analyse.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
