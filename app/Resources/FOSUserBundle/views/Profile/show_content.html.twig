{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">

    <div>
        <br/>
    </div>


    <div  class="row col-md-10 col-md-offset-1">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="font-family: 'Times New Roman' ; font-size: 15px ;">
                    <span>Vos informations sont modifier avec <b>Succes</b></span>

                </div>

                <div class="panel-body">

                    <div class="col-md-4">
                        <fieldset>
                            <legend>Photo </legend>
                            <div id="myImage" class="image">
                                <img src="{{ asset('dist/img/myUser.png') }}" class=" img-responsive" alt="User Image">
                            </div>
                        </fieldset>
                    </div>

                    <div class="col-md-8">
                        <div class="row"> 
                            <div class="col-md-5 form-group">
                                <label>Prenom </label>
                                <label class="form-control" > {{ user.prenom  }} </label>
                            </div>
                            <div class="form-group col-md-7">
                                <label>Nom </label>
                                <label class="form-control"> {{ user.prenom  }} </label>
                            </div>

                        </div>
                        <div class="row"> 
                            <div class="col-md-5 form-group">
                                <label>Telephone </label>
                                <label class="form-control" > {{ user.telephone  }} </label>
                            </div>
                            <div class="col-md-7 form-group">
                                <label>Email </label>
                                <label class="form-control" > {{ user.email  }} </label>
                            </div>
                        </div>


                        <div class="form-group">
                            <label>Adresse </label>
                            <label class="form-control" >{{ user.adresse  }}</label>
                        </div>

                    </div>
                </div><!-- /.pannel-->
            </div><!-- /.col-->
        </div><!-- /.col-->
    </div><!-- /.col-->








